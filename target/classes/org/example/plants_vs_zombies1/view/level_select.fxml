<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="rootPane" prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.plants_vs_zombies1.controller.LevelSelectController">

    <ImageView fx:id="backgroundImage" fitHeight="750.0" fitWidth="1000.0" layoutX="3.0" layoutY="-7.0"
               preserveRatio="false"/>

    <Button layoutX="20.0" layoutY="650.0" onAction="#goBack" prefHeight="37.0" prefWidth="86.0"
            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;"/>

    <Button fx:id="dayButton" layoutX="256.0" layoutY="546.0" onAction="#showDayLevels" prefHeight="50.0"
            prefWidth="78.0"
            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>

    <Button fx:id="nightButton" layoutX="354.0" layoutY="558.0" onAction="#showNightLevels" prefHeight="44.0"
            prefWidth="93.0"
            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>

    <HBox fx:id="levelContainer" alignment="CENTER" layoutX="213.0" layoutY="288.0" prefHeight="79.0" prefWidth="623.0"
          spacing="120"/>
</AnchorPane>

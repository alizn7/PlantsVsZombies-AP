<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>

<StackPane prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/17.0.12"
           fx:controller="org.example.plants_vs_zombies1.controller.LoginController">

    <MediaView fx:id="mediaView" fitHeight="600.0" fitWidth="800.0"/>

    <VBox alignment="CENTER" maxWidth="452.0" prefHeight="600.0" prefWidth="452.0" spacing="15"
          style="-fx-background-color: rgba(46, 62, 28, 0.85); -fx-background-radius: 20; -fx-padding: 30;">
        <children>
            <Label style="-fx-font-family: 'Creepster'; -fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ffb703; -fx-effect: dropshadow(gaussian, #000000, 5, 0.5, 2, 2);"
                   text="Welcome Defender!"/>

            <TextField fx:id="usernameField" promptText="Username"
                       style="-fx-background-color: #3a4f1c; -fx-background-radius: 10; -fx-border-color: #ffb703; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-font-family: 'Anime Ace'; -fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #cccccc; -fx-padding: 10;"/>

            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-background-color: #3a4f1c; -fx-background-radius: 10; -fx-border-color: #ffb703; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-font-family: 'Anime Ace'; -fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #cccccc; -fx-padding: 10;"/>

            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Button fx:id="loginButton" onAction="#onLogin" prefWidth="100"
                            style="-fx-background-color: linear-gradient(to right, #6a994e, #386641); -fx-text-fill: white; -fx-background-radius: 10; -fx-font-family: 'Anime Ace'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #000000, 3, 0.3, 1, 1);"
                            text="Login"/>

                    <Button fx:id="backButton" onAction="#goBack" prefWidth="100"
                            style="-fx-background-color: linear-gradient(to right, #8b0000, #4b0000); -fx-text-fill: white; -fx-background-radius: 10; -fx-font-family: 'Anime Ace'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #000000, 3, 0.3, 1, 1);"
                            text="Back"/>
                </children>
            </HBox>

            <Hyperlink fx:id="signupLink" onAction="#goToSignup"
                       style="-fx-text-fill: #fb8500; -fx-font-family: 'Anime Ace'; -fx-font-size: 14px; -fx-underline: false;"
                       text="Don't have an account? Sign up"/>

            <Label fx:id="errorLabel"
                   style="-fx-text-fill: #ef233c; -fx-font-family: 'Anime Ace'; -fx-font-size: 14px; -fx-font-weight: bold;"
                   text=""/>
        </children>
    </VBox>
</StackPane>

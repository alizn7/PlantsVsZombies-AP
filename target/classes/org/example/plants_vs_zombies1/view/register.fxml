<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>

<StackPane prefHeight="600.0" prefWidth="800.0"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.plants_vs_zombies1.controller.RegisterController">

    <MediaView fx:id="mediaView" fitHeight="600.0" fitWidth="800.0"/>

    <VBox alignment="CENTER" spacing="20" maxWidth="500"
          style="-fx-background-color: rgba(34, 45, 20, 0.82); -fx-background-radius: 20; -fx-padding: 35;">
        <children>

            <Label text="ðŸ§  Join the Zombie Defense ðŸ§Ÿ"
                   style="-fx-font-family: 'Creepster'; -fx-font-size: 32px; -fx-text-fill: #e0ff4f; -fx-effect: dropshadow(gaussian, black, 6, 0.6, 2, 2);"/>

            <TextField fx:id="usernameField" promptText="Username"
                       style="-fx-background-color: #223322; -fx-border-color: #a3c585; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-text-fill: white; -fx-prompt-text-fill: #cccccc; -fx-padding: 10;"/>

            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-background-color: #223322; -fx-border-color: #a3c585; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-text-fill: white; -fx-prompt-text-fill: #cccccc; -fx-padding: 10;"/>

            <HBox alignment="CENTER" spacing="15">
                <children>
                    <Button fx:id="registerButton" onAction="#onRegister" text="Register"
                            style="-fx-background-color: linear-gradient(to right, #a3c585, #6b8e23); -fx-text-fill: #fff; -fx-font-weight: bold; -fx-background-radius: 10; -fx-font-size: 14px;"/>

                    <Button onAction="#goBack" text="Back"
                            style="-fx-background-color: linear-gradient(to right, #e63946, #6a040f); -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                </children>
            </HBox>

            <Label fx:id="errorLabel"
                   style="-fx-text-fill: #ff6b6b; -fx-font-size: 13px; -fx-font-weight: bold;" text=""/>
        </children>
    </VBox>
</StackPane>
